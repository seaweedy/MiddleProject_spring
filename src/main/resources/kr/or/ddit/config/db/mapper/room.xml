<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
			
<mapper namespace="room">

	<insert id = "insertRoom" parameterType="roomVO">
		<selectKey keyProperty="room_seq" resultType="int">
			select room_seq.currval from dual
		</selectKey>
		insert into room (room_seq, room_name, room_content)
		values (room_seq.nextval, #{room_name}, #{room_content})
	</insert>
	
<!-- 	그룹생성과 동시에 상태 표현해주는 enter테이블 생성 -->
	<insert id ="insertEnter" parameterType="enterVO">
		insert into enter (room_seq, mem_id, enter_status)
		values (#{room_seq}, #{mem_id}, '0')
	</insert>
	
	<!-- 참여중인 룸 리스트  -->
	<select id = "listRoom" resultType="roomVO">
		select *
		from room 
		where room_seq IN (select B.room_seq
							from member A, enter B
							where B.enter_status = '0'
							and B.mem_id = #{mem_id})
		order by 1
	</select>
	
	<update id = "deleteRoom" parameterType="enterVO">
		update enter
		set
		enter_status='1'
		where
		room_seq = #{room_seq}
		and mem_id = #{mem_id}
	</update>
	
